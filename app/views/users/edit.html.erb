<h1>Edit Your Personal Information</h1>

<%= form_for @user do |f|  %>
  <div>
    <%= f.label :first_name %>
    <br>
    <%= f.text_field :first_name %>
  </div>

  <div>
    <%= f.label :last_name %>
    <br>
    <%= f.text_field :last_name %>
  </div>

  <div>
    <%= f.label :email %>
    <br>
    <%= f.email_field :email %>
  </div>

  <div>
    <%= submit_tag "Update" %>
  </div>
<% end %>
<br>

<h1>Update Password</h1>

<%= form_for @user, :url => edit_password_path(@user) do |f| %>
  <div>
    <%= f.label :current_password %>
    <br>
    <%= f.password_field :current_password %>
  </div>

  <div>
    <%= f.label :new_password %>
    <br>
    <%= f.password_field :new_password %>
  </div>

  <div>
    <%= f.label :new_password_confirmation %>
    <br>
    <%= f.password_field :new_password_confirmation %>
  </div>

  <div>
    <%= submit_tag "Update" %>
  </div>

<% end %>

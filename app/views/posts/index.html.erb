        <img src="https://images.pexels.com/photos/26750/pexels-photo-26750.jpg?w=1260&h=750&auto=compress&cs=tinysrgb">
        <i class="glyphicon glyphicon-heart"></i>
        <i><%= Faker::Number.between(1,1000) %></i>

        <i class="glyphicon glyphicon-bookmark pull-right"></i>
        <div class="post">
          <h3><%= link_to p.title, post_path(p) %></h3>
          <p><%= p.body %></p>
          <p><%= Faker::Name.name  %></p>
          <p><%= Faker::Date.between(600.days.ago, Date.today) %></p>

        </div>
        <hr>
    </div>
    <% end %>
  </div>
</div>

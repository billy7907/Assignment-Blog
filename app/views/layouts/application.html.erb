<!DOCTYPE html>
<html>
  <head>
    <title>Blog</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>

  </head>

  <body>

    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed"
          data-toggle="collapse" data-target="#bs-example-navbar-collapse-1"
          aria-expanded="false">
          <span class='glyphicon glyphicon-menu-hamburger'></span>


          </button>

          <a class='navbar-brand' href="/">
            <span class='glyphicon glyphicon-fire'></span>
          </a>

        </div>

        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <form class="navbar-form navbar-left">
            <div class="form-group">
              <div class='visible-xs'>
                <input type="text" class="form-control" placeholder="Search">
              </div>
            </div>
          </form>
          <ul class= "nav navbar-nav">
            <li><a href="/">Home</a></li>
            <li><a href="/">About</a></li>
            <li><a href="/">Contact</a></li>
            <li><a href="/posts/new">New Post</a></li>
            <% if user_signed_in? %>
              <li><a href="/users/<%= current_user.id %>/likes">Liked Post</a></li>
            <% end %>
            <hr>
          </ul>





          <ul class="nav navbar-nav navbar-right">
            <% if user_signed_in? %>
              <li><%= link_to current_user.full_name, edit_user_path(current_user) %></li>
              <li><%= link_to "Logout", sessions_path, method: :delete,data: {confirm: "are you sure you want to log out?"}%></li>
            <% else %>
              <li><%= link_to "Login", new_session_path %></li>
              <li><%= link_to "Sign Up", new_user_path %></li>
            <% end %>
          </ul>

          <form class="navbar-form navbar-right">
            <div class="form-group">
              <div class='visible-lg'>
                <input type="text" class="form-control" placeholder="Search">
              </div>
            </div>
          </form>

        </div>
      </div>
    </nav>

    <% if flash[:notice] %>
    <%= flash[:notice] %>
    <% elsif flash[:alert] %>
    <%= flash[:alert] %>
    <% end %>


    <%= yield %>

  <div class='col-xs-12' id='footer'>
    <i class="fa fa-envelope-o" aria-hidden="true"></i>
    <i class="fa fa-facebook-square" aria-hidden="true"></i>
    <i class="fa fa-instagram" aria-hidden="true"></i>
    <i class="fa fa-medium" aria-hidden="true"></i>
    <i class="fa fa-twitter-square" aria-hidden="true"></i>
  </div>

</body>
</html>
